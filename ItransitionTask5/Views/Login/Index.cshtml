@{
    ViewBag.Title = "Enter your name";
    Layout = "_Layout";
}

<form asp-controller="Login" asp-action="Login">
    <div class="form-outline mb-4">
        <label class="form-label" for="name">Name</label>
        <input name="Name" oninput="onNameChanged(event)" type="text" id="name" class="form-control" 
               placeholder="Type here"/>
    </div>
    <button id="submitBtn" type="submit" class="btn btn-primary btn-block" hidden="hidden">Login as </button>
</form>

<script>
    var onNameChanged = event => {
        var submitBtn = document.getElementById("submitBtn");
        var input = document.getElementById("name");
        submitBtn.innerText = "Login as " + input.value;
        if (input.value == "")
            submitBtn.hidden = true;
        else
            submitBtn.hidden = false;
    }
    
</script>